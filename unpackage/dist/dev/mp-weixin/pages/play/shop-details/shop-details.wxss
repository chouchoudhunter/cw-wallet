#shop-details {
  background-color: #ffffff;
  height: 100%;
}
.slider {
  background-color: #999999;
}
.shop-infor {
  padding: 15px 12px 12px 12px;
  border-bottom: solid 5px #F4F4F4;
}
.shop-infor .name {
  font-size: 17px;
}
.shop-infor .location {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-top: 20px;
}
.shop-infor .location .location-left {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-flex: 1;
  -webkit-flex-grow: 1;
          flex-grow: 1;
}
.shop-infor .location .location-left image {
  width: 10px;
  height: 14px;
  margin: 2px 8px 0 0;
}
.shop-infor .location .location-left .address .address1 {
  font-size: 12px;
  margin-bottom: 4px;
}
.shop-infor .location .location-left .address .address2 {
  font-size: 10px;
  color: #888888;
}
.shop-infor .location .location-right {
  width: 50px;
  height: 22px;
  font-size: 12px;
  color: #FF2121;
  text-align: center;
  line-height: 22px;
  border: solid 0.5px #FF2121;
  border-radius: 11px;
}
.shop-infor .tel-share {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-top: 10px;
}
.shop-infor .tel-share .tel {
  -webkit-box-flex: 1;
  -webkit-flex-grow: 1;
          flex-grow: 1;
  font-size: 13px;
}
.shop-infor .tel-share .share {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.shop-infor .tel-share .share .img {
  width: 20px;
  height: 18px;
}
.shop-infor .tel-share .share .title {
  font-size: 10px;
}
.open-time {
  font-size: 12px;
  padding: 15px 12px;
  border-bottom: solid 2px #F4F4F4;
}
.open-time text {
  font-size: 15px;
  margin-right: 13px;
  padding-left: 10px;
  border-left: solid 2px #FF2121;
}
.introduce {
  font-size: 12px;
  padding: 15px 12px;
}
.introduce text {
  font-size: 15px;
}

