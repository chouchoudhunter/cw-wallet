.message {
  padding: 24px 12px 40px;
  background-color: #FFFFFF;
  line-height: 1.6;
  position: relative;
}
.message .time {
  font-size: 13px;
  color: #666666;
  margin-bottom: 5px;
}
.message .content {
  font-size: 14px;
  text-indent: 2em;
}
.message .triangle {
  position: absolute;
  bottom: 0;
  left: 14px;
  width: 0;
  height: 0;
  border: solid 10px;
  border-color: transparent transparent #F4F4F4 transparent;
}
.discuss {
  padding: 20px 12px 0 12px;
}
.discuss .title {
  padding: 0 0 14px 3px;
  font-size: 15px;
  border-bottom: solid 0.5px #E0E0E2;
}
.discuss .discuss-list {
  margin-bottom: 63px;
}
.discuss .discuss-list .one-discuss {
  border-bottom: solid 0.5px #E0E0E2;
  padding: 10px 0 13px 0;
  line-height: 1.5;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.discuss .discuss-list .one-discuss .img {
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  width: 32px;
  height: 32px;
  border-radius: 18px;
  background-color: #C8C7CC;
  margin-right: 10px;
}
.discuss .discuss-list .one-discuss .name-time-reply {
  -webkit-box-flex: 1;
  -webkit-flex-grow: 1;
          flex-grow: 1;
}
.discuss .discuss-list .one-discuss .name-time-reply .name-time {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.discuss .discuss-list .one-discuss .name-time-reply .name-time .name {
  -webkit-box-flex: 1;
  -webkit-flex-grow: 1;
          flex-grow: 1;
  font-size: 14px;
}
.discuss .discuss-list .one-discuss .name-time-reply .name-time .time {
  font-size: 11px;
  color: #888888;
}
.discuss .discuss-list .one-discuss .reply {
  font-size: 12px;
  color: #555555;
}
.discuss .discuss-list .one-discuss .reply ._span {
  margin-left: 4px;
}
.comment-back {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #F4F4F4;
  padding: 10px 12px;
}
.comment-back .add-comment {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 40px;
  background-color: #FFFFFF;
  border-radius: 20px;
  padding: 0 11px;
}
.comment-back .add-comment input {
  -webkit-box-flex: 1;
  -webkit-flex-grow: 1;
          flex-grow: 1;
}
.comment-back .add-comment image {
  width: 22px;
  height: 22px;
  margin-left: 8px;
}

