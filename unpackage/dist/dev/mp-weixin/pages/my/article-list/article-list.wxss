.article-style1 {
  padding: 15px 12px;
  margin-bottom: 5px;
  background-color: #ffffff;
}
.article-style1 .title {
  font-size: 14px;
}
.article-style1 .picture {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin: 14px 0;
}
.article-style1 .picture .img {
  width: 100px;
  height: 100px;
  margin-right: 15px;
  background-color: #C0C0C0;
  border-radius: 2px;
}
.article-style1 .time {
  font-size: 12px;
  color: #888888;
}
.article-style2 {
  padding: 15px 12px;
  margin-bottom: 5px;
  background-color: #ffffff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.article-style2 .title-time {
  display: -webkit-box;
